<% if @goods_stock.errors.blank? %>
	$('#form-modal').modal('hide');
	$('#items').prepend("<%= escape_javascript(render(@goods_stock)) %>");
	
	$('#msg').html('<%= escape_javascript(content_tag(:div, link_to("x", "#", :class => "close") + content_tag(:p,"货物已成功保存 "), :class => "alert alert-success", "data-alert" => "alert")) %>');
<% else %>
	$("#form-modal> .modal-body").html("<%= escape_javascript(render(:partial=>'form')) %>");
<% end %>