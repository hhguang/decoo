<div class="contentwrapper"><!--Content wrapper-->
  <div class="heading">

    <h3>用户管理</h3>

    <ul class="breadcrumb">
      <li>You are here:</li>
      <li>
        <a href="#" class="tip" title="back to dashboard">
          <span class="icon16 icomoon-icon-screen"></span>
        </a>
        <span class="divider">
          <span class="icon16 icomoon-icon-arrow-right"></span>
        </span>
      </li>
      <li class="active">用户管理</li>
    </ul>

  </div><!-- End .heading-->

  <div class="row-fluid">
    <div class="span12" id="msg">
      <%= notice_message %>
    </div>
  </div>


  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="title">
          <h4>
            <span class="icon16 brocco-icon-grid"></span>
            <span>用户列表</span>

          </h4>
          
        </div>
        <div class="content noPad">
          <div style="padding: 15px;">
            <a href="<%= new_product_path %>"  class="btn btn-success " data-remote="true" >
              <span class="icon14 iconic-icon-plus white"></span>
              新增用户
            </a>


          </div>

<table class="responsive table table-bordered">
  <thead>
  <tr class="head">
    <th class="first">#</th>
    <th>用户名
    </th>
    <th>EMAIL</th>
    <th>姓名</th>
    <th>操作</th>
  </tr>
  </thead>
<% @users.each do |user| %>
  <tr>
    <td class="first"><%= user.id %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.name %></td>
    
    <td>
      <%= link_to '', edit_user_path(user), :class => "icon icomoon-icon-pencil" %>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate @users %>

    </div>
      </div>
    </div>


</div>