<h1>Listing specs</h1>

<table>
  <tr>
    <th>Bh</th>
    <th>Name</th>
    <th>Value</th>
    <th>Is color</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @specs.each do |spec| %>
  <tr>
    <td><%= spec.bh %></td>
    <td><%= spec.name %></td>
    <td><%= spec.value %></td>
    <td><%= spec.is_color %></td>
    <td><%= spec.color_id %></td>
    <td><%= link_to 'Show', spec %></td>
    <td><%= link_to 'Edit', edit_spec_path(spec) %></td>
    <td><%= link_to 'Destroy', spec, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

