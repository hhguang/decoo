<div class="contentwrapper"><!--Content wrapper-->
  <div class="heading">

    <h3>自定义规格</h3>    

    <ul class="breadcrumb">
      <li>You are here:</li>
      <li>
        <a href="#" class="tip" title="back to dashboard">
          <span class="icon16 icomoon-icon-screen"></span>
        </a>
        <span class="divider">
          <span class="icon16 icomoon-icon-arrow-right"></span>
        </span>
      </li>
      <li class="active">自定义规格</li>
    </ul>

  </div><!-- End .heading-->

  <div class="row-fluid">
    <div class="span12">
      <%= notice_message %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span4">
      
      <div class="box">

                                <div class="title">

                                    <h4>
                                        <span class="icon16 brocco-icon-grid"></span>
                                        <span>自定义规格列表</span>
                                    </h4>
                                    <a href="#" class="minimize" style="display: none;">Minimize</a>
                                </div>
                                <div class="content noPad">

                                  <div style="padding: 15px;">
            <a href="<%=  %>" role="button"  class="btn btn-success ">
              <span class="icon14 iconic-icon-plus white"></span>
              新增
            </a>

            <%#*<form class="form-inline pull-right" style="padding-left:20px;">%>
              <%#*<input type="text" class="input-medium search-query">%>
              <%#*<button type="submit" class="btn">搜索</button>%>
            <%#*</form>%>

          </div>

                                    <table class="responsive table table-bordered">
                                        <thead>
                                          <tr>
                                            <th>#</th>
                                            <th>名称</th>                                            
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% @spec_properties.each do |spec_property| %>
                                          <tr>
                                            <td><%= spec_property.id %></td>
                                            <td><%= spec_property.name  %></td>                                            
                                            <td>
                                                <div class="controls center">
                                                    <a href="<%= edit_spec_property_path(spec_property) %>" class="tip" oldtitle="Edit task" title="">
                                                      <span class="icon12 icomoon-icon-pencil"></span>
                                                    </a>
                                                    <%= link_to "", spec_property, :class => "icon icomoon-icon-remove",'data-confirm' => "确定要删除吗？", :method => :delete, :title => "确定要删除吗？" %>
                                                </div>
                                            </td>
                                          </tr>
                                          <% end %>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
    </div>

    <div class="span8">
      <%= render 'form' %>
    
  </div>
</div>
</div>


