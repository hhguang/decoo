# encoding: utf-8
<div class="box">
        <div class="title">

                                    <h4>
                                        <span class="icon16 brocco-icon-grid"></span>
                                        <span>
                                          <%= @spec_property.new_record? ? "增加" : "编辑" %>
                                        </span>
                                    </h4>
                                    
                                </div>
        <div class=content>
      <%= form_for(@spec_property ,:html=>{:class=>"form-horizontal"}) do |f| %>
        <% if @spec_property.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@spec_property.errors.count, "error") %> prohibited this spec_property from being saved:</h2>

            <ul>
            <% @spec_property.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-row row-fluid">
          <div class="span12">
            <div class="row-fluid">
              <label for="title" class="form-label span4">名称</label>
              <%= f.text_field :name,:class=>'span8 focused text' %>
            </div>
          </div>
        </div>
        <div class="form-row row-fluid">
          <div class="span12">
            <div class="row-fluid">
              <label for="title" class="form-label span4">标识（英文）</label>
              <%= f.text_field :key,:class=>'span8 focused text' %>
              <span class="help-inline blue">非系统管理人员不要修改</span>
            </div>
          </div>
        </div>

        <div class="form-row row-fluid">
          <div class="span12">
            <div class="row-fluid">
              <label for="title" class="form-label span4">规格值</label>
              <%= f.text_area :value,:rows=>3,:class=>'span8 elastic uniform',:style=>"overflow: hidden; height: 80px;" %>
              <span class="help-inline blue">选项之间用逗号,隔开</span>
            </div>
          </div>
        </div>

        <div class="form-actions">
                                           <button type="submit" class="btn btn-info">保存</button>
                                           <button type="button" class="btn">Cancel</button>
                                        </div>

      <% end %>

    </div>
    </div>