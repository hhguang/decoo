<%= simple_form_for(@goods_stock_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :goods_stock_id %>
    <%= f.input :type %>
    <%= f.input :quantity,:label=>"数量" %>
    <%= f.input :memo,:label=>"备注" ,:input_html=>{ :rows=>"2" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,:value=>“出入库” %>
  </div>
<% end %>
