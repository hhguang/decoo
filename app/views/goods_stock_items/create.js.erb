<% if @goods_stock_item.errors.blank? %>
	$('#form-modal').modal('hide');
	$('#item_<%= @goods_stock_item.goods_stock.id %>').replaceWith("<%= escape_javascript(render(@goods_stock_item.goods_stock.reload)) %>");			
	<% msg="货物已成功#{@goods_stock_item.act_type=='in' ? '入库' : '出库'}" %>
	$('#msg').html('<%= escape_javascript(content_tag(:div, link_to("x", "#", :class => "close") + content_tag(:p,msg), :class => "alert alert-success", "data-alert" => "alert")) %>');
	$('#item_<%= @goods_stock_item.goods_stock.id %>').fadeOut(1000).fadeIn(1000);
<% else %>
	$("#form-modal> .modal-body").html("<%= escape_javascript(render(:partial=>'form')) %>");
<% end %>
