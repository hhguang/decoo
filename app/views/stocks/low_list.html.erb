                <th>操作</th>

              </tr>
            </thead>
            <tbody id="items">
              <%= render(@stocks) %>
            </tbody>
          </table>
           <%#= will_paginate @stocks, :inner_window => 2,:params=>{:search=>@search} %>
        </div>
  </div>

</div>