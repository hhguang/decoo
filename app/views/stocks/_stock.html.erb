<tr>
  <td>
    <%= stock.id %>
  </td>
  <td>
    <a title="<%= stock.name %>" rel="prettyPhoto" href="/products/<%= stock.product.image_url %>">
      <img src="/products/<%= stock.product.image_url %>" class="img-polaroid" style="width:auto;height: 60px;"/>
    </a>
  </td>
  <td>
    <%= stock.bh %>
  </td>
  <td>
    <%= stock.name %>
  </td>
  <td style="background-color: <%= stock.color.value %>">
    
  </td>
  <td>
    <%= stock.color_name %>
  </td>
  <td>
    
    <%= stock.spec.material if stock.spec %>
      
  </td>
  <td>
    <%= stock.spec.wait_for_out %>
  </td>
  <td>
    <span class="badge badge-info">
    <%= stock.quantity %>
      </span>
  </td>
  <td>    

    <%= number_with_precision((stock.quantity*stock.product.weight)) %>

  </td>
  <td>
    <%= link_to '出入明细',list_stock_path(stock) %>
  </td>
</tr>