<%= simple_form_for(@user_log) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :ctr_name %>
    <%= f.input :action_name %>
    <%= f.input :resource_id %>
    <%= f.input :resource_name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
