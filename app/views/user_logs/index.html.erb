<div class="contentwrapper"><!--Content wrapper-->
    <%= render '/share/head',:title=>'日志管理',:here=>'日志列表'  %>
    <div class="row-fluid">
    <div class="span12" id="msg">
      <%= notice_message %>
    </div>
  </div> 

  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="title">
          <h4>
            <span class="icon16 brocco-icon-grid"></span>
            <span>日志列表</span>

          </h4>
          
        </div>
        <div class="content noPad">
          <table class="responsive table table-bordered">
            <thead>
            <tr>
              <th>用户</th>
              <th>Ctr name</th>
              <th>Action name</th>
              <th>Resource</th>
              <th>Resource name</th>
              <th>url</th>
              <th>Description</th>
              <th>ip</th>
              <th>时间</th>
            </tr>
          </thead>

          <% @user_logs.each do |user_log| %>
            <tr>
              <td><%= user_log.user.name  %>[<%= user_log.user.username%>]</td>
              <td><%= user_log.ctr_name %></td>
              <td><%= user_log.action_name %></td>
              <td><%= user_log.resource_id %></td>
              <td><%= user_log.resource_name %></td>
              <td><%= user_log.url %></td>
              <td><%= user_log.description %></td>
              <td><%= user_log.remote_ip %></td>
              <td><%= user_log.created_at %></td>
            </tr>
          <% end %>
          </table>
        </div>
    </div>
</div>
</div>


