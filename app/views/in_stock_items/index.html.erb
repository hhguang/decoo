<div class="contentwrapper"><!--Content wrapper-->
  <div class="heading">

    <h3>库存管理</h3>

    <ul class="breadcrumb">
      <li>You are here:</li>
      <li>
        <a href="#" class="tip" title="back to dashboard">
          <span class="icon16 icomoon-icon-screen"></span>
        </a>
        <span class="divider">
          <span class="icon16 icomoon-icon-arrow-right"></span>
        </span>
      </li>
      <li class="active">库存管理</li>
    </ul>

  </div><!-- End .heading-->

  <div class="row-fluid">
    <div class="span12">
  
  <%= notice_message %>
  <div class="box">
        <div class="title">
          <h4>
            <span class="icon16 brocco-icon-grid"></span>
            <span>入库单</span>
          </h4>
        </div>
        <div class="content noPad">
          <div style="padding: 15px;">

            <%= form_for(@item, :url=>in_stock_items_path(@item),:remote=>true,:html=>{:class=>'form-horizontal'}) do |f| %>
            <% if @item.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@item.errors.count, "error") %> prohibited this product from being saved:</h2>

                <ul>
                  <% @item.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="row-fluid">
              <div class="span4">
                <div class="form-row row-fluid">
                  <div class="span12">
                    <div class="row-fluid">
                      <label for="bh" class="form-label span4">货号</label>
                      <%#= f.text_field :spec_bh,:class=>'span8 focused text',:readonly=>"readonly",:id=>'spec_bh' %>
                    </div>
                  </div>
                </div>
                
              <div class="span4">
                <div class="form-row row-fluid">
                  <div class="span12">
                    <div class="row-fluid">
                      <label for="weight" class="form-label span4">备注</label>
                      <%#= f.text_area :memo,:class=>'span8 uniform',:rows=>3 %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <button class="btn btn-info" type="submit">
                <span class="icon14 iconic-icon-plus white"></span>
              新增入库条目
                </button>
            </div>
          <% end %>
          </div>
          </div>
          <table id="DataTables_Table_0" class="responsive table table-bordered ">
            <thead>
              <tr>
                <th>#</th>
                <th>货号</th>
                <th colspan="2">颜色</th>
                <th>材料</th>
                <th>备注</th>

                <th>Actions</th>
              </tr>
            </thead>

            <tbody id="specs">

              <%#= render(@specs) %>

            <tbody>

            </tbody>
          </table>
          <div style="padding: 10px;">

          </div>
        </div>

      </div><!-- End .box -->
  </div>
    </div>
    </div>
</div>
