<div class="contentwrapper"><!--Content wrapper-->
<%= render '/share/head',:title=>'成品管理',:here=>'编辑' %>

<p id="notice"><%= notice %></p>

    <div class="navbar">
    <div class="navbar-inner">
    <a class="brand" href="#">
      成品：<%= @toy.name %>
    </a>
    <ul class="nav">
    <li ><a href="#">详细</a></li>
    <li class="active"><a href="edit">编辑</a></li>
    <li><a href="#">Link</a></li>
    </ul>
    </div>
    </div>

<div class="row-fluid">
    <div class="span12">

      

  <div class="tabbable tabs-left">
<ul class="nav nav-tabs " id="myTab">
	<% first=true %>
<% @toy.packages.each do |package| %>

  <li  <%= "class='active'" if first %> >
  	<a href="#<%= package.id %>"><%= package.name %></a>
  </li>  
  <% first=false %>
<% end %>

</ul>

<div class="tab-content">
	<% first=true %>
<% @toy.packages.each do |package| %>

  <div class="tab-pane <%= "active" if first %>" id="<%= package.id %>">
    <% first=false %>
    <ul class="nav nav-tabs " id="package_tab">
      
      <li class="active">
        <a href="#p" data-toggle='tab'>大零件包</a>
      </li>
      <% package.children.each do |s| %>
      <li class="">
        <a href="#p<%= s.id %>" data-toggle='tab'>
          <%= s.name %>
        </a>
      </li>
      <% end %>
      
      </ul>  
        
      
      <div class="tab-content" id="package_content">
        <div class="tab-pane active" id="p">
        	<ul class="thumbnails center" id="itemContainer">
        		<% package.parts.each do |part| %>
        	  <li class="span3">
        	    <div class="thumbnail">
        	      <img src="/products/<%= part.spec.product.image_url %>" alt="" style="width:auto;height: 60px;">
        	      <h3><%= part.spec.bh %></h3>
        	      <p>
        	      	件数：<%=  part.quantity %>
        	      	颜色：
        	      	名称：
        	      </p>
        	    </div>
        	  </li>
        	  <% end %>

      	   </ul>
        </div>
        <% package.children.each do |s| %>
          <div class="tab-pane " id="p<%= s.id %>">
            <ul class="thumbnails center" id="itemContainer">
              <% s.parts.each do |part| %>
              <li class="span3">
                <div class="thumbnail">
                  <img src="/products/<%= part.spec.product.image_url %>" alt="" style="width:auto;height: 60px;">
                  <h3><%= part.spec.bh %></h3>
                  <p>
                    件数：<%=  part.quantity %>
                    颜色：
                    名称：
                  </p>
                </div>
              </li>
              <% end %>

             </ul>
          </div>
        <% end %>
      </div>
  </div>
  

<% end %>
</div>
</div>
<!-- end tabbable -->


<%= link_to 'Edit', edit_toy_path(@toy) %> |
<%= link_to 'Back', toys_path %>

</div>
</div>

</div>