
<div class="contentwrapper"><!--Content wrapper-->
  <%=  render "/share/head",:title=>"仓库管理",:here=>"仓库管理" %>

  <div class="row-fluid">
    <div class="span12">
      <%= notice_message %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      
      <div class="box">

          <div class="title">
              <h4>
                <span class="icon16 brocco-icon-grid"></span>
                <span>仓库管理</span>
               </h4>
               <a href="#" class="minimize" style="display: none;">Minimize</a>
          </div>
          <div class="content noPad">
              <div style="padding: 15px;">
                  <%= simple_form_for(@store_house,:html=>{:class=>"form-inline"}) do |f| %>
                    <%= f.error_notification %>

                      <%= f.input :name,:label=>"名称" %>
 
                      <%= f.button :submit,:value=>"新增仓库" %>
                    
                  <% end %>
                    
              </div>

                                    <table class="responsive table table-bordered">
                                        <thead>
                                          <tr>
                                            <th>#</th>
                                            <th>名称</th>                                            
                                            <th>操作</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% @store_houses.each do |store_house| %>
                                          <tr>
                                            <td></td>
                                            <td><%= store_house.name  %></td>                                            
                                            <td>
                                                <div class="controls center">
                                                  <%= link_to '', edit_store_house_path(store_house),:class=>"icon12 icomoon-icon-pencil" %>
                                                  <%= link_to '', store_house, :class => "icon icomoon-icon-remove",confirm: '确定要删除吗？', method: :delete %>
                                                  
                                                </div>
                                            </td>
                                          </tr>
                                          <% end %>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
    </div>

</div>
</div>


