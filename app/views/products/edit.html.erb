
<%= simple_form_for(@product, :remote=>true,:html=>{:class=>'form-horizontal',:multipart=>true}) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-block alert-error">
      <a class="close" data-dismiss='alert' href="#">×</a>
      <p><strong>有 <%= @product.errors.count %> 处问题导至无法提交:</strong></p>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% end %>
  <div class="row-fluid">       
           <%= f.input :title %>
           <%= f.input :bh %>
           <%= f.input :weight %>




      <div class="form-row row-fluid">
        <div class="span12">
          <div class="row-fluid">
            <label for="weight" class="form-label span4">备注</label>
            <%= f.text_area :memo,:class=>'span8 uniform',:rows=>3 %>
          </div>
        </div>
      </div>

      <div class="form-row row-fluid">
        <div class="span12">
          <div class="row-fluid">
            <label class="form-label span4">上传文件：</label>
            
            <input type="hidden" name="product[image_url]" id="image-url" />

              <img src="<%= "/products/#{@product.image_url}" if @product.image_url %>" class="img-polaroid" style="width:auto;height: 60px;" id="product-image"/>

              <%= link_to("点击上传", "#", :id => "topic_add_image", :rel => "twipsy", :class => "btn eco-images ")%>
          </div>
        </div>
      </div>
    
  </div>

  <div class="form-actions">
    <button class="btn btn-info" type="submit" onclick="$('#edit_modal').modal('hide')">保存</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>

  </div>
<% end %>

<div style="display:none;">
    <form >
      <input type="file" id="topic_upload_images"/>
    </form>
</div>
