

<div class="contentwrapper"><!--Content wrapper-->
  <div class="heading">

    <h3>产品管理</h3>



    <ul class="breadcrumb">
      <li>You are here:</li>
      <li>
        <a href="#" class="tip" title="back to dashboard">
          <span class="icon16 icomoon-icon-screen"></span>
        </a>
        <span class="divider">
          <span class="icon16 icomoon-icon-arrow-right"></span>
        </span>
      </li>
      <li class="active">产品管理</li>
    </ul>

  </div><!-- End .heading-->

  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="title">
          <h4>
            <span class="icon16 brocco-icon-grid"></span>
            <span>新增</span>
          </h4>
        </div>


        <div class="content ">
          <%= simple_form_for(@product, :html=>{:class=>'form-horizontal',:multipart=>true}) do |f| %>
            <% if @product.errors.any? %>
              <div class="alert alert-block alert-error">
                <a class="close" data-dismiss='alert' href="#">×</a>
                <p><strong>有 <%= @product.errors.count %> 处问题导至无法提交:</strong></p>
                <ul>
                  <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>

            <% end %>
            <%= f.input :title %>
            <%= f.input :bh %>
            <%= f.input :weight %>
            <%= f.input :memo, input_html: { :rows=>3 } %>
            <div class="control-group file optional">
              <label class="file optional control-label" for="product_memo">上传文件：</label>
              <div class="controls">
                <input type="file" name="product[upload_picture]" class='file optional uniform'></input>
                <% if @product.image_url %>
                    <img src="/products/<%= @product.image_url %>" class="span4 img-polaroid " style="width:69px;height: 60px;" />
                  <% end %>
              </div></div>
            



            <div class="form-actions">
              <button class="btn btn-info" type="submit">保存</button>
              <a class="btn" href="<%= products_path %>">取消</a>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

