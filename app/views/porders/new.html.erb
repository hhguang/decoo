<div class="contentwrapper"><!--Content wrapper-->
  <%= render '/share/head',:title=>'生产管理',:here=>'生产下单' %>

  <div class="row-fluid">
    <div class="span12" id="msg">
      <%= notice_message %>
    </div>
  </div> 

  <div class="row-fluid">
    <div class="span12">
      <div class="box">
        <div class="title">
          <h4>
            <span class="icon16 brocco-icon-grid"></span>
            <span>生产下单</span>
          </h4>
          
        </div>
        <div class="content noPad">
          <div style="padding: 15px;">
            
            <form class="form-inline pull-left" style="padding-left:20px;" action="<%=  toys_path %>">
            	<label>成品名称</label>
              <input type="text" class="input-medium " name="name" value=<%= @toy.name %> disabled=true />
              <label>数量</label>
              <input type="text" class="input-medium " name="quantity" value=<%= @quantity %> />
              <a  class="btn" href="#" id='js'>计算</a>
              <button type="submit" class="btn btn-success">下单</button>
            </form>
            <script type="text/javascript">
            	$("a#js").on( "click", function( event ) {
            		var q=this.
            		$("tbody#parts tr").each(function(index){
            			this.find("#zs").innerText=this.find("#sl").innerText*
            		}) 
            	}
            	)
            </script>

          </div>
          <table id="DataTables_Table_0" class="responsive table table-bordered ">
            <thead>
              <tr>
                <th>#</th>
                <th>数量</th>
                <th>总件数</th>
                <th>重量</td>
                <th>库存</th>
              </tr>
            </thead>
            <tbody id="parts">
              <% @parts.each do |part| %>
              <tr>
              	
              	<td>
              		<%= part.spec.bh %>
              	</td>
              	<td id="sl">
              		<%= part.quantity %>
              	</td>
              	<td id='zs'>
              		<%= part.quantity*@quantity %>
              	</td>
              	<td>
              		<%= number_with_precision(part.quantity*@quantity*part.spec.product.weight) %>
              	</td>
              	<td>
              		<%= part.spec.stock.quantity || 0 %>
              	</td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <div class="row-fluid" style="padding: 10px;">
            
              
            </div>
                        
          </div>
          
          
        </div>

      </div><!-- End .box -->

    </div>

  </div>

</div>
