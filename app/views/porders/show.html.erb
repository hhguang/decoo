<div class="contentwrapper"><!--Content wrapper-->
  <%= render '/share/head',:title=>'生产管理',:here=>'领料单' %>

  <div class="row-fluid">
    <div class="span12">
      <div class="btn-group span4" >
        <a href="/porders" role="button"  class="btn  ">
          所有领料单
        </a>
        <a href="/porders/edit" role="button"  class="btn " >
          修改
        </a>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div id="msg" style="padding:10px;">
        <%= notice_message %>
      </div>

      <div class="box gradient invoice">

        <div class="title clearfix">

          <h4 class="left">
            <span>生产单</span>
            <span class="number"> <strong class="red">#<%= @porder.name %></strong></span>
          </h4>
          <%#*<div class="print">%>
            <%#*<a class="tip" href="#" oldtitle="Print invoice" title=""><span class="icon24 entypo-icon-printer"></span></a>%>
          <%#*</div>%>
          <div class="invoice-info">
            
            <span class="data gray"><%= @porder.created_at.strftime("%Y-%m-%d ") %></span>
            <div class="clearfix"></div>
          </div>

        </div>
        <div class="content">
          <div class="you">
            <ul class="unstyled">
              <li><h3>成品</h3></li>
              <li><span class="icon12 typ-icon-arrow-right"></span><%= @porder.toy.name %></li>
              
          </div>
          <div class="client">
            <ul class="unstyled">
              <li><h3>下单</h3></li>
              <li><span class="icon12 typ-icon-arrow-right"></span><%= "#{@porder.user.name}" if @porder.user_id %></li>
              

            </ul>
          </div>
          <div class="clearfix"></div>

          <table class="responsive table table-bordered">
            <thead>
              <tr>
                
                <th>货号</th>
                <th colspan="2">颜色</th>
                <th>材料</th>
                <th>重量</th>
                <th>数量</th>
              </tr>
            </thead>
            <tbody>

              <% @porder.toy.parts.each do |item|  %>

              <tr>
                <td>
                  <%= item.spec.bh if item.spec %>
                </td>
                <td style="background-color:<%= item.spec.color.value if item.spec %> " >
                  
                </td>
                <td>
                  <%= item.spec.color.name if item.spec %>
                </td>
                <td>
                  <%= item.spec.material if item.spec %>
                </td>
                <td>
                  <%= item.spec.product.weight*item.quantity*@porder.quantity %>
                </td>
                <td>
                  <%= item.quantity*@porder.quantity %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <!-- <div class="payment">
            <ul class="unstyled">
              <li><h3>备注</h3></li>
              
            </ul>
          </div>

          <div class="total">
            
          </div> -->


          <div class="clearfix"></div>

          <div class="invoice-footer">
            
          </div>

        </div>

      </div>
    </div>
  </div>
</div>


