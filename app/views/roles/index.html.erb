# encoding: utf-8
<div class="contentwrapper"><!--Content wrapper-->
  <%= render '/share/head',:title=>'角色管理',:here=>'角色列表' %>
  <div class="row-fluid">
    <div class="span12" id="msg">
      <%= notice_message %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">

      <div class="box">
        <div class="title">
          <h4>
            <span class="icon16 brocco-icon-grid"></span>
            <span>角色列表</span>
          </h4>
        </div>

        <div class="content noPad">
          <div style="padding: 15px;">
            <a href="<%= new_role_path %>"  class="btn btn-success "  >
              <span class="icon14 iconic-icon-plus white"></span>
              新增角色
            </a>
          </div>
          <table class="responsive table table-bordered">
            <thead>
              <tr class="head">
                <th class="first">#</th>
                <th>名称</th>
                <th>权限</th>

                <th colspan="2">操作</th>
              </tr>
            </thead>
            <% @roles.each do |role| %>
            <tr >
              <td class="first"><%= role.id %></td>
              <td><%= role.title %></td>
              <td><%= role.permissions.map { |p| p.description  }.join(',') %></td>

              <td><%= link_to '修改', edit_role_path(role) %></td>
              <td><%= link_to '删除', role, confirm: '确定要删除吗?', method: :delete %></td>
            </tr>
            <% end %>
          </table>
        </div>
        <!-- end content -->
      </div>
      <!-- end box -->
    </div>
    <!-- end span -->
  </div>
  <!-- end row -->
</div>
