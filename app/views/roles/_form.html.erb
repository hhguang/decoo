<%= simple_form_for(@role) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
  <%= f.association :permissions,label_method: :description,input_html: { size: 10 } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to '返回', roles_path %>
  </div>
<% end %>
