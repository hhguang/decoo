

<div class="contentwrapper"><!--Content wrapper-->
  <div class="heading">

    <h3>货物分类</h3>    

    <ul class="breadcrumb">
      <li>You are here:</li>
      <li>
        <a href="#" class="tip" title="back to dashboard">
          <span class="icon16 icomoon-icon-screen"></span>
        </a>
        <span class="divider">
          <span class="icon16 icomoon-icon-arrow-right"></span>
        </span>
      </li>
      <li class="active">货物分类</li>
    </ul>

  </div><!-- End .heading-->

  <div class="row-fluid">
    <div class="span12">
      <%= notice_message %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span4">
      
      <div class="box">

          <div class="title">
              <h4>
                <span class="icon16 brocco-icon-grid"></span>
                <span>货物分类</span>
               </h4>
               <a href="#" class="minimize" style="display: none;">Minimize</a>
          </div>
          <div class="content noPad">
              <div style="padding: 15px;">
                  <%= link_to '新增分类', new_goods_category_path,:class=>"btn btn-success" %>            
              </div>

                                    <table class="responsive table table-bordered">
                                        <thead>
                                          <tr>
                                            <th>#</th>
                                            <th>名称</th>                                            
                                            <th>操作</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% @goods_categories.each do |goods_category| %>
                                          <tr>
                                            <td></td>
                                            <td><%= goods_category.name  %></td>                                            
                                            <td>
                                                <div class="controls center">
                                                  <%= link_to '', edit_goods_category_path(goods_category),:class=>"icon12 icomoon-icon-pencil" %>
                                                  <%= link_to '', goods_category, :class => "icon icomoon-icon-remove",confirm: '确定要删除吗？', method: :delete %>
                                                    <%#= link_to "", spec_property, :class => "icon icomoon-icon-remove",'data-confirm' => "确定要删除吗？", :method => :delete, :title => "确定要删除吗？" %>
                                                </div>
                                            </td>
                                          </tr>
                                          <% end %>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
    </div>

    <div class="span8">
      <%= render 'form' %>
    
  </div>
</div>
</div>


