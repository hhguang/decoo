

<div class="contentwrapper"><!--Content wrapper-->
  <div class="heading">

    <h3>货物分类</h3>    

    <ul class="breadcrumb">
      <li>You are here:</li>
      <li>
        <a href="#" class="tip" title="back to dashboard">
          <span class="icon16 icomoon-icon-screen"></span>
        </a>
        <span class="divider">
          <span class="icon16 icomoon-icon-arrow-right"></span>
        </span>
      </li>
      <li class="active">货物分类</li>
    </ul>

  </div><!-- End .heading-->

  <div class="row-fluid">
    <div class="span12">
      <%= notice_message %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6">
      
      <div class="box">

          <div class="title">
              <h4>
                <span class="icon16 brocco-icon-grid"></span>
                <span>货物分类</span>
               </h4>
               <a href="#" class="minimize" style="display: none;">Minimize</a>
          </div>
          <div class="content noPad">
              <div style="padding: 15px;">
                  <%= link_to '新增分类', new_goods_category_path,:class=>"btn btn-success" %>            
              </div>
              <ul>
                <% @goods_categories.each do |goods_category| %>
                <li>
                  <%= tree_show(goods_category) %>
                </li>
                <% end %>
              </ul>
          </div>
      </div>
    </div>

    <div class="span6">
      <%= render 'form' %>
    
    </div>
</div>
</div>


