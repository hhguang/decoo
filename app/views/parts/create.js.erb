var new_id = new Date().getTime();
var regexp = new RegExp("new_parts" , "g");

var remove_field=$(".tab-content .active #package_content .active #remove_field").clone(true);
var pic="<%= escape_javascript(render(:partial=>'part_pic')) %>";
pic.children("thumbnail").replace(regexp, new_id).append(remove_field);

$(".tab-content .active #package_content .active #itemContainer").append(pic);
 $('#part-modal').modal('hide');   
 
var spec_id_field=$(".tab-content .active #package_content .active #spec_id_field").clone(true);
 spec_id_field.children("input").val(<%= @part.spec_id %>);   
$(".tab-content .active #package_content .active #fields").append(spec_id_field.html().replace(regexp, new_id));

var quantity_field=$(".tab-content .active #package_content .active #quantity_field").clone(true);
 quantity_field.children("input").val(<%= @part.quantity %>);   
$(".tab-content .active #package_content .active #fields").append(quantity_field.html().replace(regexp, new_id));



